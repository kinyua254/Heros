<title>{{#partial "title"}}Home{{/partial}}</title>

{{#partial "mainContent"}}
    <!--    banner image-->
    <div class="container banner-image d-flex justify-content-center align-items-center">
        <div class="heroTitle text-center text-white">
            <h1>WELCOME TO THE HERO WORLD</h1>
            <h5>A place to create Heroes and Hero Squads</h5>
        </div>
    </div>

    <div class="container d-flex justify-content-evenly mt-5">
        <!-- Button trigger hero -->
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modal-hero">
            🦸ADD YOUR HERO🦸
        </button>
        <!-- Button trigger squad -->
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modal-squad">
            🦸ADD YOUR SQUAD🦸
        </button>
    </div>

    <!-- models.Hero Modal -->
    <div class="modal fade" id="modal-hero" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">MODIFY YOUR OWN HERO BELOW</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/new/heroHome" method="post">
                        <input class="form-control" name="heroName" type="text" placeholder="Enter Hero's Name" required>
                        <br>
                        <input class="form-control" name="heroAge" type="text" placeholder="Enter Hero's Age" required>
                        <br>
                        <input class="form-control" name="heroPower" type="text" placeholder="Enter Hero's Power" required>
                        <br>
                        <input class="form-control" name="heroWeakness" type="text" placeholder="Enter Hero's Weakness" required>
                        <br>
                        <div class="button d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark">Add Hero</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Squad Modal -->
    <div class="modal fade" id="modal-squad" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">ADD YOUR SQUAD BELOW</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/new/squadHome" method="post">
                        <input class="form-control" name="squadName" type="text" placeholder="Enter Squad's Name" required>
                        <br>
                        <input class="form-control" name="squadSize" type="text" placeholder="Enter Squad's Age" required>
                        <br>
                        <input class="form-control" name="squadCause" type="text" placeholder="Enter Squad's Power" required>
                        <br>
                        <div class="button d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark">Add Squad</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}